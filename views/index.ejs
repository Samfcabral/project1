    <title>Home | Mi Casa</title>

    <link rel="stylesheet" href="/stylesheets/bootstrap.min.css">
    <!-- Custom Edits -->
    <link rel="stylesheet" href="stylesheets/main.css">

    <link href="https://getbootstrap.com/examples/signin/signin.css" rel="stylesheet">

    <script src="https://getbootstrap.com/assets/js/ie-emulation-modes-warning.js" rel="stylesheet"></script>

  </head>

  <body class="homey">

  <!-- Start of navigation -->
    <nav class="navbar navbar-default navbar-static-top" role="navigation">
    <div class="container">  
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/">Mi Casa</a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
            <li class="active"><a href="/">Home</a></li>
            <% if (!currentUser)  {%> 
              <li><a href="/register">Register</a></li>
              <li><a href="/login">Login</a></li>
            <% }else{ %>
              <li><a href="/logout">Logout</a></li>
              <li><a href="/users/<%= currentUser.id %>">Watch List</a></li>
              <li><a href="#">Hello <%= currentUser.firstName %></a></li>
            <% }%>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </nav>
   <!-- End of Navigation --> 

<div class="container">
<div class="cover-container">
    <div class="site-wrapper">
      <div class="site-wrapper-inner">
          <div class="inner cover">
            <h1 class="cover-heading">FIND YOUR NEXT HOME</h1>
            <p class="lead">Get detailed information about a property.</p>
          </div>

<!-- Start of registration -->
      <form class="form-signin" role="form" action="/search" method="GET">
        <label for="street" class="sr-only">Address</label>
        <input name="address" type="name" id="street" class="form-control" placeholder="Address" required autofocus>
        <label for="city" class="sr-only">City</label>
        <input name="city" type="name" id="city" class="form-control" placeholder="City" required>
        <label for="state" class="sr-only">State</label>
        <input name="state" type="name" id="state" class="form-control" placeholder="State" required>
        <label for="zip" class="sr-only">Zip</label>
        <input name="zip" type="name" id="zip" class="form-control" placeholder="Zip Code" required>
        <button class="btn btn-lg btn-primary btn-block" type="submit">SEARCH NOW</button>
      </form>

<!-- End of registration -->

      </div>
    </div>
  </div>
</div><!-- /container -->

